<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <!-- Title -->
    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Demo In-App Key Logger (Educational)"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"/>

    <!-- Short description -->
    <TextView
        android:id="@+id/descTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="This logs only text typed into the input below (inside this app)."
        android:textSize="14sp"
        android:layout_below="@id/titleTextView"
        android:layout_marginTop="8dp"
        android:layout_centerHorizontal="true"/>

    <!-- Input field where user types -->
    <EditText
        android:id="@+id/inputEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Type here (only logged inside this app)"
        android:layout_below="@id/descTextView"
        android:layout_marginTop="16dp"
        android:imeOptions="actionDone"
        android:inputType="text"/>

    <!-- Submit button (optional) -->
    <Button
        android:id="@+id/submitButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit (log current text)"
        android:layout_below="@id/inputEditText"
        android:layout_marginTop="12dp"
        android:layout_alignParentStart="true" />

    <!-- Clear logs button -->
    <Button
        android:id="@+id/clearButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Clear Logs"
        android:layout_below="@id/inputEditText"
        android:layout_marginTop="12dp"
        android:layout_toEndOf="@id/submitButton"
        android:layout_marginStart="12dp" />

    <!-- Scrollable area to show logs -->
    <ScrollView
        android:id="@+id/logScroll"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@id/submitButton"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="16dp"
        android:fillViewport="true">

        <TextView
            android:id="@+id/logTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Logs will appear here..."
            android:textSize="14sp"
            android:padding="8dp" />
    </ScrollView>

</RelativeLayout>
